// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
//  provider = "sqlite"
  provider = "mysql"
  url      = env("PRISMA_DATABASE_URL")
}

model User {
  id BigInt @id
  email String @unique
}

model Comparison {
  id BigInt @id
  collectionId String @default("")
  userId String
  requestTime DateTime
  requestIp String
}

model Collection {
  collectionId String @id
  name String
  datasource String @db.Text
  description String @db.Text
  cachedData String @db.Text
  lastUpdateTime DateTime
  maxElementsPerComparison Int @default(1)
}

model ComparisonElement {
  id BigInt @id
  elementId BigInt
  comparisonId BigInt
  objectId String
}

model ComparisonResponse {
  id BigInt @id
  selectedComparisonElementId BigInt
}

model session {
  session_id    String   @id @db.VarChar(128)
  sess   Json     @db.Json
  expire Int @db.UnsignedInt

  @@index([expire], map: "IDX_session_expire")
}
